<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group9.fete.About$PlaceholderFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Fete"
        android:id="@+id/Welcome"
        android:textSize="16sp"
        android:textColor="@color/Orange"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:text="Fete is a platform for finding and renting local spaces for your parties, festivities, get-togethers, and all functions. Each week we highlight a featured local user so that you can know more about the community members who are renting out their properties. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome"
        android:id="@+id/textView"
        android:layout_marginBottom="10sp"/>

    <!--start questions-->

    <!--Question Who is Fete For-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is Fete for?"
        android:id="@+id/Who"
        android:layout_below="@+id/textView"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urban dwellers"
        android:id="@+id/WhoAnswer"
        android:layout_below="@+id/Who"
        android:layout_marginLeft="10sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empty Nesters"
        android:id="@+id/WhoAnswer1"
        android:layout_below="@+id/WhoAnswer"
        android:layout_marginLeft="10sp"/>


    <!--Question Why is this important?-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why is Fete Important?"
        android:id="@+id/Why"
        android:layout_below="@+id/WhoAnswer1"
        android:textSize="16sp"
        android:layout_marginTop="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space is expensive"
        android:id="@+id/WhyAnswer"
        android:layout_below="@+id/Why"
        android:layout_marginLeft="10sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources are limited"
        android:id="@+id/WhyAnswer2"
        android:layout_below="@+id/WhyAnswer"
        android:layout_marginLeft="10sp" />

</RelativeLayout>
</ScrollView>